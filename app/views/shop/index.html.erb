<h1>Shop#index</h1>
<p>Find me in app/views/shop/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', shop_path(product) %></td>
        
        <td>
        	<%= form_for @order_item, remote: true do |f| %>
	        	<%= f.hidden_field :product_id, :value => product.id %>
	        	<%= f.number_field :quantity, :value => 1, :min => 1 %>
	        	<%= f.submit "Add to cart" %>	<!-- Bam Add to cart mot phat la tao order_item moi -->
        	<% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="card">
	<%= render 'cards/card' %>
</div>


